<%- include('partials/header') -%>

<h1><strong>Compose</strong></h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="" class="form-label">Title</label>
    <input type="text" class="form-control" placeholder="" name="postTitle" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="" class="form-label">Post</label>
    <textarea class="form-control" rows="3" name="postDesc" autocomplete="off"></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include('partials/footer') -%>
